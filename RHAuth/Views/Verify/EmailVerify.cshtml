
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="signup-wizard container-fluid">
    <div class="row page-height">
        <div class="col-lg-12">
            <form class="form-cside">
                <div class="d-flex justify-content-center mb-3" style="height:200px">
                    <img alt="REDHANDED" class="img-fluid" src="~/images/red-handed-logo.png" />
                </div>
                <h5 class="generic-heading d-flex justify-content-center">
                    <span></span>
                    Thank you for Signing Up
                </h5>
                @if (ViewBag.VerifiedData.Succeeded == true)
                {
                    <p style="color: #a80000;font-size: 14px;text-align: center;font-weight: 700">
                        Your Account has been Verified successfully.
                        <script>
                            setTimeout(function () {
                                window.location.replace("https://redhandedco.com/@ViewBag.RedirectUrl");
                                //window.location.replace("https://redhanded.azurewebsites.net/@ViewBag.RedirectUrl");
                            }, 3000);
                        </script>
                    </p>
                }
                else
                {
                    <div style="color: #a80000;font-size: 14px;text-align: center;font-weight: 700">
                        <p style="word-break: break-word;">
                            Something Went Wrong. An email sent to your email address again please check your inbox.
                        </p>
                    </div>
                }
                <div class="redhanded-slogan-footer mt-5">
                    <span>
                        REDHANDED is an online platform where real estate owners and enterpreneurs can
                    </span>
                    <br />
                    <span>
                        transact independently of a broker in a transparent, efficient and cost-effective manner
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>

